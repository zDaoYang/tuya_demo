.timer {
  position: relative;
  width: 100%;
  height: 180rpx;
  background: #fff;
  padding: 0 30rpx 0 40rpx;
}
.timer::after {
  background: #eee;
  content: '';
  width: 100%;
  height: 1px;
  transform: scaleY(0.5);
  position: absolute;
  bottom: 0;
  left: 0;
}
.setting {
  align-items: flex-start;
}
.setting-type {
  font-size: 24rpx;
  color: #272b45;
}
.setting-time {
  position: relative;
  left: -6rpx;
  font-size: 52rpx;
  color: #272b45;
  line-height: 1.5;
}
.setting-day {
  color: #a1a8ae;
  font-size: 22rpx;
}
.add-btn {
  margin: 0 auto;
  margin-top: 60rpx;
  width: 600rpx;
  height: 100rpx;
  border-radius: 100rpx;
  background: #ff8315;
  color: #fff;
  font-size: 36rpx;
}



.picker {
  position: relative;
  width: 100%;
  height: auto;
  padding-bottom: 80rpx;
}
.dot {
  font-size: 40rpx;
  position: absolute;
  top: 310rpx;
}
.picker-title {
  position: relative;
  padding: 0 30rpx;
  width: 100%;
  height: 120rpx;
}
.picker-title::after {
  background: #eee;
  content: '';
  width: 100%;
  height: 1px;
  transform: scaleY(0.5);
  position: absolute;
  bottom: 0;
  left: 0;
}
.picker-title > .left {
  color: #272b45;
  font-size: 34rpx;
}
.picker-title > .right {
  color: #272b45;
  font-size: 24rpx;
}

.picker > .confirm-btn {
  margin-top: 60rpx;
  width: 600rpx;
  height: 100rpx;
  border-radius: 100rpx;
  background: #ff8315;
  color: #fff;
  font-size: 36rpx;
}

.repeat {
  margin-top: 80rpx;
  width: 100%;
  padding: 0 40rpx;
}

.repeat-title {
  padding-left: 20rpx;
  width: 100%;
  text-align: left;
  color: #272b45;
  font-size: 34rpx;
  position: relative;
}
.repeat-title::after {
  content: '';
  position: absolute;
  width: 100%;
  height: 1px;
  transform: scaleY(0.5);
  bottom: -10rpx;
  left: 0;
  background: #eee;
}

.repeat-option {
  margin-top: 30rpx;
  width: 100%;
}

.repeat-option_item {
  flex: 1;
}

.repeat-day {
  color: #272b45;
  font-size: 24rpx;
}

