

.content {
  background: #1DC36D;
  height: 100vh;
  padding-bottom: 120rpx;
}

.socket {
  margin-top: 250rpx;
}
.socket-icon {
  width: 270rpx;
  height: 270rpx;
}
.socket-status {
  margin-top: 24rpx;
  font-size: 34rpx;
  color: #fff;
}
.socket-tip {
  margin-top: 16rpx;
  font-size: 24rpx;
  color: rgba(255, 255, 255, 0.7);
  background: rgba(255, 255, 255, 0.2);
  padding: 8rpx 36rpx;
  border-radius: 24rpx;
}

.control {
  width: 100%;
  padding: 0 100rpx;
}
.control-item {
  display: flex;
  flex-direction: column;
  align-items: center;
}
.control-item-icon-wrapper {
  width: 110rpx;
  height: 110rpx;
  border-radius: 50%;
  border: 1px solid #fff;
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;
}
.control-item-icon-wrapper.active {
  background: #fff;
}
.control-item-icon {
  width: 50%;
  height: 50%;
}
.control-item-name {
  margin-top: 20rpx;
  color: #fff;
  font-size: 24rpx;
}
